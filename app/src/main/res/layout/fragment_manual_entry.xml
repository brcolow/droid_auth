<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:autofit="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="net.cryptodirect.authenticator.ManualEntryFragment"
                android:background="#212121">

    <me.grantland.widget.AutofitTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manual_entry_blurb"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:textColor="#f2f2f2"
        android:textSize="20sp"
        android:gravity="start"
        android:maxLines="2"
        autofit:minTextSize="14sp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="16"
        android:id="@+id/email_field"
        android:textColor="#212121"
        android:enabled="true"
        android:background="#f4f4f4"
        android:textSize="20sp"
        android:hint="@string/email_hint"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:minWidth="150dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/email_label"
        android:layout_alignLeft="@+id/email_label"
        android:layout_alignStart="@+id/email_label"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:id="@+id/email_label"
        android:textColor="#f2f2f2"
        android:textSize="20sp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/key_text_field"
        android:background="#f4f4f4"
        android:enabled="true"
        android:minWidth="120dp"
        android:maxWidth="320dp"
        android:textColor="#212121"
        android:textSize="20sp"
        android:typeface="monospace"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:hint="@string/sample_key"
        android:elegantTextHeight="true"
        android:inputType="textUri|textMultiLine"
        android:gravity="top|start"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/key_label"
        android:layout_alignLeft="@+id/key_label"
        android:layout_alignStart="@+id/key_label"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key"
        android:id="@+id/key_label"
        android:textColor="#f2f2f2"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/email_field"
        android:layout_alignLeft="@+id/email_field"
        android:layout_alignStart="@+id/email_field"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/okay"
        android:id="@+id/okay_button"
        android:layout_below="@+id/key_text_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"/>
</RelativeLayout>
