<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:autofit="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                tools:context="net.cryptodirect.authenticator.HowItWorksPageFragment">
    <ImageView
        android:id="@+id/how_it_works_page_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_qrcode_white_36dp"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/how_it_works_page_text"
        android:layout_centerHorizontal="true"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/how_it_works_page_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cras sodales magna in dolor aliquet, eget scelerisque quam fermentum. In hac habitasse platea dictumst."
        android:textColor="@color/whiteColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:padding="25dp"
        android:textSize="22sp"
        autofit:minTextSize="18sp"
        android:maxLines="3"/>

</RelativeLayout>