<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.cryptodirect.authenticator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AuthenticatorActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterAccountActivity"
            android:label="@string/title_activity_register_account" >
            <intent-filter>
                <action android:name="android.intent.action.REGISTER_ACCOUNT" />
                <category android:name="android.intent.category.ACCOUNT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
